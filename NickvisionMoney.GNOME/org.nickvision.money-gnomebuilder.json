{
    "app-id" : "org.nickvision.money",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions": [
	"org.freedesktop.Sdk.Extension.dotnet7"
    ],
    "build-options": {
    	"append-path": "/usr/lib/sdk/dotnet7/bin",
    	"append-ld-library-path": "/usr/lib/sdk/dotnet7/lib",
    	"env": {
            "PKG_CONFIG_PATH": "/app/lib/pkgconfig:/app/share/pkgconfig:/usr/lib/pkgconfig:/usr/share/pkgconfig:/usr/lib/sdk/dotnet7/lib/pkgconfig"
    	}
    },
    "command" : "/app/opt/org.nickvision.money/NickvisionMoney.GNOME",
    "finish-args":[
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--filesystem=home"
    ],
    "cleanup":[
	"/include",
	"/lib/pkgconfig",
	"*.a"
    ],
    "modules" : [
        {
            "name": "org.nickvision.money",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p /app/opt/org.nickvision.money",
                "dotnet publish NickvisionMoney.GNOME --self-contained true -o /app/opt/org.nickvision.money",
                "mkdir -p /app/share/icons/hicolor/scalable/apps",
                "cp NickvisionMoney.Shared/Resources/org.nickvision.money.svg /app/share/icons/hicolor/scalable/apps/",
                "cp NickvisionMoney.Shared/Resources/org.nickvision.money-devel.svg /app/share/icons/hicolor/scalable/apps/",
                "mkdir -p /app/share/icons/hicolor/symbolic/apps",
                "cp NickvisionMoney.Shared/Resources/bank-symbolic.svg /app/share/icons/hicolor/symbolic/apps/",
                "cp NickvisionMoney.Shared/Resources/larger-brush-symbolic.svg /app/share/icons/hicolor/symbolic/apps/",
                "cp NickvisionMoney.Shared/Resources/money-none-symbolic.svg /app/share/icons/hicolor/symbolic/apps/",
                "cp NickvisionMoney.Shared/Resources/org.nickvision.money-symbolic.svg /app/share/icons/hicolor/symbolic/apps/",
                "cp NickvisionMoney.Shared/Resources/wallet2-symbolic.svg /app/share/icons/hicolor/symbolic/apps/",
                "mkdir -p /app/share/org.nickvision.money",
                "glib-compile-resources NickvisionMoney.GNOME/Resources/org.nickvision.money.gresource.xml",
                "mv NickvisionMoney.GNOME/Resources/org.nickvision.money.gresource /app/share/org.nickvision.money/",
                "mkdir -p /app/share/applications",
                "cp NickvisionMoney.GNOME/org.nickvision.money.desktop /app/share/applications/",
                "mkdir -p /app/share/metainfo",
                "cp NickvisionMoney.GNOME/org.nickvision.money.metainfo.xml /app/share/metainfo/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nlogozzo/NickvisionMoney.git",
                    "branch": "csharp"
                }
            ]
        }
    ]
}